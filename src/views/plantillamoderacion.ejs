            <div class="reporteentrante">
                <img src="/images/v.svg">
                <p><%= data.tipo_reporte%></p>
                <p><%= formatDate(data.fecha)%></p>
                <p><%= data.estatus%></p>
                <p><%= data.latitud + '' + data.longitud%></p>
