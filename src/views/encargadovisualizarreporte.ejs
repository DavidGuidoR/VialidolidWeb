<%- include('partials/_header') %>

    <section id="navegacionmod">
        <ul>
            <h1>
                <li>
                    <a href="/pantallaEncargado">
                        <img src="/images/v.svg" alt="logo">
                    </a>
                </li>
                <li>
                    <a href="/pantallaEncargado">
                        Vialidolid<br>denuncias ciudadanas
                    </a>
                </li>
            </h1>
            <div class="botonesmod">
                <li>
                    <a href="#">Perfil</a>
                </li>
                <li>
                    <a href="/pantallaMenuPrincipal">Cerrar Sesion</a>
                </li>
            </div>

        </ul>
    </section>


    <section id="contenidogeneral">
        <article>
            <div class="barralateral">
                <div class="botoneslateral">
                    <h1>
                        <span>
                            <img src="/images/imagenperfil.svg">
                            <p>Usuario: <%=session.usuario%>
                            </p>
                            <p>Rol: <%=session.cargo%>
                            </p>
                        </span>
                    </h1>

                    <a href="/pantallaReportesRevisadosEncargado?dependencia=<%=session.dependencia%>">
                        Reportes revisados
                    </a>
                
                    <a href="/pantallaReportesEntrantesEncargado?dependencia=<%=session.dependencia%>">
                        Reportes entrantes
                    </a>
                    <a href="/pantallaDescargarReportesEncargado?dependencia=<%=session.dependencia%>">
                        Descargar reportes
                    </a>
                </div>
            </div>

            <section class="contenedorderecho">
            <div class="contenido">
                <container class="contenedorentEnc">

                        <div id="descEnc">
                            <%data.forEach(function(data) {%>
                            <div id="desc-tituloEnc">
                                
                                <h3>Descripcion</h3>
                                <h1>
                                    <%=data.descripcion%>
                                </h1>
                            </div>
                            <div class="wrapperEnc">
                                <div>
                                    <img src="/images/v.svg" height="100px" width="100px">
                                </div>
                                <div>
                                    <h3>Fecha:</h3>
                                    <p><%=formatDate(data.fecha)%></p>
                                </div>
                                <div>
                                    <h3>Latitud y Longitud</h3>
                                    <p><%=data.latitud%></p>
                                </div>
                                <div>
                                    <h3>Apoyos</h3>
                                    </p><%=data.n_apoyos%></p>
                                </div>
                                <div>
                                    <h3>Estatus</h3>
                                    <p><%=data.estatus%></p>
                                </div>
                                <div>
                                    <h3>Denuncias</h3>
                                    <p><%=data.n_denuncias%></p>
                                </div>
                                <div>
                                    <h3>Referencias</h3>
                                    <p><%=data.referencias%></p>
                                </div>
                                <div>
                                    <h3>Id de ciudadano</h3>
                                    <p><%=data.id_ciudadano%></p>
                                </div>
                                <div>
                                    <h3>Tipo de reporte</h3>
                                    <p><%= tiporeporte %></p>
                                </div>
                                <div>
                                    <h3>Tabla</h3>
                                    <p><%= id_tabla %></p>
                                </div>
                                
                                <%- inputsHTML %>

                            </div>
                            <div id="semifooterEnc">
                                <a href="/rechazarReportesEncargado/<%=id_tabla%>/<%=data.id_reporte%>/<%=session.id_encargado%>">Rechazar</a>
                                <a href="/solucionarReportesEncargado/<%=id_tabla%>/<%=data.id_reporte%>/<%=session.id_encargado%>">Solucionado</a>
                                <a href="/descargarReportesEncargado/<%=id_tabla%>/<%=data.id_reporte%>/<%=session.dependencia%>">Descargar reporte</a>  
                            </div>
                        </div>
                        <% }); %>
                </container>
            </div>
        </section>
        </article>
    </section>



    <%- include('partials/_footer') %>