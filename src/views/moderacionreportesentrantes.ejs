<%- include('partials/_header') %>

    <section id="navegacionmod">
        <ul>
            <h1>
                <li>
                    <a href="/pantallaModeracion">
                        <img src="/images/v.svg" alt="logo">
                    </a>
                </li>
                <li>
                    <a href="/pantallaModeracion">
                        Vialidolid<br>denuncias ciudadanas
                    </a>
                </li>
            </h1>
            <div class="botonesmod">
                <li>
                    <a href="/pantallaPerfilModerador/<%=session.id_empleado%>">Perfil</a>
                </li>
                <li>
                    <a href="/pantallaMenuPrincipal">Cerrar Sesion</a>
                </li>
            </div>

        </ul>
    </section>


    <section id="contenidogeneral">
        <article>
            <div class="barralateral">
                <div class="botoneslateral">
                    <h1>
                        <span>
                            <img src="/images/imagenperfil.svg">
                            <p>Usuario: <%=session.usuario%>
                            </p>
                            <p>Rol: <%=session.cargo%>
                            </p>
                        </span>
                    </h1>

                    <a href="/pantallaReportesRevisados">
                        Reportes En Atencion
                    </a>

                    <a href="/pantallaReportesEntrantes">
                        Reportes entrantes
                    </a>
                </div>
            </div>


            <section class="contenedorderecho">
                <div class="contenido">

                    <container class="contenedorent">
                        <h1>Reportes En Atencion</h1>

                        <%data.forEach(function(data) { if(data.estatus=='pendiente' ){%>

                            <div class="reporteentrante">
                                <img src="/images/v.svg">
                                <p id="titulodesc">
                                    <%= data.descripcion%>
                                </p>
                                <p>
                                    <%= formatDate(data.fecha)%>
                                </p>
                                <p id="pendiente">
                                    Estatus: <%= data.estatus%>
                                </p>
                                <p>
                                    <%= data.latitud + '' + data.longitud%>
                                </p>

                                <a href="/pantallaVisualizarReporte/<%= data.id_reporte %>">Revisar</a>
                            </div>





                            <% }}); %>

                    </container>

                </div>
            </section>
        </article>
    </section>



    <%- include('partials/_footer') %>